<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonSalvar2"
        android:layout_width="326dp"
        android:layout_height="68dp"
        android:layout_marginBottom="72dp"
        android:drawableEnd="@drawable/ic_baseline_save_alt_24"
        android:outlineSpotShadowColor="@color/dark_green"
        android:text="Salvar Meta"
        android:textSize="80px"
        app:layout_constraintBottom_toTopOf="@+id/textViewLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginStart="4dp"

        android:background="@drawable/arrow_back_icon"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388" />

    <Button
        android:id="@+id/buttonSalvar"
        android:layout_width="326dp"
        android:layout_height="68dp"
        android:drawableEnd="@drawable/ic_baseline_save_alt_24"
        android:outlineSpotShadowColor="@color/dark_green"
        android:text="Salvar Meta"
        android:textSize="80px"
        app:layout_constraintBottom_toTopOf="@+id/buttonResetar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/buttonResetar"
        android:layout_width="326dp"
        android:layout_height="68dp"
        android:layout_marginBottom="136dp"
        android:backgroundTint="#eed202"
        android:drawableEnd="@drawable/ic_baseline_restore_24"
        android:outlineSpotShadowColor="#eed202"
        android:text="Resetar Meta"
        android:textSize="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <EditText
            android:id="@+id/editTextMeta"
            android:layout_width="373dp"
            android:layout_height="70dp"
            android:autoSizeMinTextSize="48dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_money"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Definir Meta"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="80px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Button1"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_baseline_person_24" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLogout"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_logout"
        android:drawableTop="@drawable/ic_baseline_exit_to_app_24"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

</androidx.constraintlayout.widget.ConstraintLayout>