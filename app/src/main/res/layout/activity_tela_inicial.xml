<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonApagar"
        android:layout_width="274dp"
        android:layout_height="79dp"
        android:drawableEnd="@drawable/ic_baseline_delete_forever_24"
        android:outlineSpotShadowColor="@color/dark_green"
        android:text="Apagar Progresso."
        android:textSize="60px"
        android:backgroundTint="#cc0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="383dp"
        android:layout_height="417dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455">

        <TextView
            android:id="@+id/textMeta"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:autoSizeMaxTextSize="90dp"
            android:autoSizeMinTextSize="50dp"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textColor="@color/dark_green"
            app:autoSizeTextType="uniform"
            tools:text="META" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonPlastic"
                android:layout_width="180dp"
                android:layout_height="169dp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_green"
                app:srcCompat="@drawable/plastic" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButtonPapper"
                android:layout_width="180dp"
                android:layout_height="169dp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_green"
                app:srcCompat="@drawable/paper" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonGlass"
                android:layout_width="180dp"
                android:layout_height="169dp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_green"
                app:srcCompat="@drawable/glass" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButtonMetal"
                android:layout_width="180dp"
                android:layout_height="169dp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_green"
                app:srcCompat="@drawable/metal" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ButtonPerfil"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>